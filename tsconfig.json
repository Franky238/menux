{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "declaration": true,
    "strictNullChecks": true, // no implicit nulls
    "noImplicitAny": true, // no implicit any
    "module": "ES6",
    "target": "es5",
    "lib": [ "es2015", "dom" ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
